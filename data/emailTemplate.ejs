
<%# Account Registration Verification Template %>
<% if (template === 'registration') { %>
    <!-- eventual verification link -->
    <h2>Welcome to iCapital Budget!</h2>
    <p>Hello <%= details.first_name %>,</p>
    <p>Thank you for creating an account with us.</p>
    <p>Please verify your email by clicking the link below:</p>
    <a href="<%= details.verification_link %>">Verify Email</a>  
<% } %>


<%# Deletion Email Template%>
<% if (template === 'deletion') { %>
    <h2>Account Deletion Confirmation</h2>
    <p>Your iCapital Budget account has been successfully deleted.</p>

    <h3>Final Budget Summary</h3>
    <ul>
        <li>Total Income: $<%= details.finalBudgetSummary.total_income %></li>
        <li>Total Expenses: $<%= details.finalBudgetSummary.total_expenses || 0 %></li>
        <li>Final Balance: $<%= details.finalBudgetSummary.disposable_income %></li>
    </ul>


    <p>Thank you for using iCapital Budget!</p>
<% } %>


<%# Account Password Reset Template %>
<% if (template === 'password_reset') { %>
    <!-- eventual verification link -->
    <h2>Password Reset Request</h2>
    <p>The email linked to this iCapital Budget account has requested to reset the password</p>
    <p>You can reset your password by clicking the link below:</p>
    <p><strong>Note: This link will expire in 1 hour for security purposes.</strong></p>
<a href="<%= details.verification_link %>">Reset Password</a>
<p>If you didn't request this password reset, please ignore this email or contact support if you have concerns.</p>
    
<% } %>

<%# Login Passcode Template%>
<% if (template === 'passcode') { %>
    <h2>Login Passcode</h2>
    <p>Here is your login passcode <%= details.passcode %> </p>
<% } %>


<%# Test Email Template%>
<% if (template === 'test') { %>
    <h1>Test Email</h1>
    <p>Hello from iCapital Budget API!</p>
    <p>If you're seeing this, email setup is working.</p>
<% } %>